generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name  String 
  phone String  @unique
  state String
  district String
  city   String
  password String
  language String
  fields Fields[]
}

model Fields{
  id String @id @default(uuid())
  area Int
  crop String ?
  startTime DateTime ?
  endTime DateTime  ?
  userId String 
  user User @relation(fields: [userId], references: [id])
  
}



